<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewAppIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/padding_5dp"
        android:layout_marginEnd="@dimen/padding_5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="App Name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewAppIcon" />

    <TextView
        android:id="@+id/textPkgName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="com.srm.demoapp.asdasdad.asdadsasdfddfddfdfgdfgfdgdfdfgdfgdgdfddd.asdsadad.asdasdasd.asdasdasd"
        android:textSize="14sp"
        android:maxLines="3"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textAppName"
        app:layout_constraintStart_toEndOf="@id/imageViewAppIcon"/>

    <TextView
        android:id="@+id/textMainActivityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Activity Name"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textPkgName"
        app:layout_constraintStart_toEndOf="@id/imageViewAppIcon" />

    <TextView
        android:id="@+id/textVersionCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Version Code"
        android:textSize="13sp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMainActivityName"
        app:layout_constraintStart_toEndOf="@id/imageViewAppIcon" />

    <TextView
        android:id="@+id/textVersionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Version Name"
        android:textSize="13sp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textVersionCode"
        app:layout_constraintStart_toEndOf="@id/imageViewAppIcon" />

    <TextView
        android:id="@+id/viewDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/purple_200"
        android:layout_marginTop="@dimen/margin_10dp"
        android:alpha="0.5"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textVersionName"
        app:layout_constraintStart_toEndOf="@id/imageViewAppIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>